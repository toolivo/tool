  <script>
    // Dark Mode Toggle
    const toggle = document.getElementById('theme-toggle');
    const icon = toggle.querySelector('.material-icons');
    if (sessionStorage.getItem('dark') === 'true') {
      document.body.classList.add('dark-mode');
      icon.textContent = 'light_mode';
    }
    window.addEventListener('scroll', () => {
      if (window.scrollY > 10) {
        if (!toggle.classList.contains('visible')) {
          toggle.style.display = 'flex';
          setTimeout(() => toggle.classList.add('visible'), 100);
        }
      } else {
        toggle.classList.remove('visible');
        toggle.style.display = 'none';
      }
    });
    toggle.addEventListener('click', () => {
      const isDark = document.body.classList.toggle('dark-mode');
      sessionStorage.setItem('dark', isDark);
      icon.textContent = isDark ? 'light_mode' : 'dark_mode';
    });

    // Button Click Animation
    document.querySelectorAll('.btn').forEach(btn => {
      btn.addEventListener('click', function() {
        this.classList.add('clicked');
        setTimeout(() => this.classList.remove('clicked'), 600);
      });
    });

    // Tool Development Snippets
    const toolSnippets = [
      // Productivity Tools
      ["Smart Task Manager", "AI-powered task prioritization with calendar integration.", "Uses machine learning to predict your most productive hours."],
      ["Code Snippet Library", "Organize and share code snippets across your team.", "Supports syntax highlighting for 50+ programming languages."],
      ["Project Timeline Generator", "Visual project planning with drag-and-drop interface.", "Automatically adjusts timelines when tasks change."],
      ["Meeting Note Taker", "AI-powered transcription and action item extraction.", "Integrates with all major calendar platforms."],
      ["File Format Converter", "Convert between 100+ file formats with one click.", "Batch processing for up to 1000 files at once."],
      ["Data Visualization Tool", "Create interactive charts and graphs from any dataset.", "Export options include PNG, SVG, and interactive HTML."],

      // Design Tools
      ["Logo Maker Pro", "AI-generated logos based on your business description.", "Generates 50+ variations in under 60 seconds."],
      ["Color Palette Generator", "Create harmonious color schemes for your projects.", "Accessibility checker ensures WCAG compliance."],
      ["Mockup Creator", "Build realistic product mockups in minutes.", "Library of 500+ device frames and backgrounds."],
      ["Typography Tool", "Find the perfect font pairing for any project.", "Analyzes readability and visual hierarchy."],
      ["Image Optimizer", "Compress images without losing quality.", "Reduces file size by up to 80% automatically."],
      ["Vector Editor", "Browser-based vector graphics editor.", "Export to SVG, PDF, and PNG formats."],

      // Development Tools
      ["API Testing Suite", "Test REST APIs with automated workflows.", "Generate detailed reports with performance metrics."],
      ["Database Manager", "Visual interface for managing multiple databases.", "Supports MySQL, PostgreSQL, MongoDB, and more."],
      ["Code Review Assistant", "AI-powered code analysis and improvement suggestions.", "Integrates with GitHub, GitLab, and Bitbucket."],
      ["Website Performance Analyzer", "Comprehensive website speed and SEO audit.", "Provides actionable recommendations."],
      ["Security Scanner", "Automated vulnerability detection for web applications.", "Scans for OWASP Top 10 security risks."],
      ["Deployment Automation", "One-click deployment to multiple cloud platforms.", "Supports AWS, Google Cloud, and Azure."],

      // Marketing Tools
      ["Social Media Scheduler", "Plan and publish content across all platforms.", "Analytics dashboard tracks engagement metrics."],
      ["SEO Keyword Research", "Find high-value keywords for your content strategy.", "Competitor analysis reveals untapped opportunities."],
      ["Email Template Builder", "Drag-and-drop email designer with responsive layouts.", "A/B testing for subject lines and content."],
      ["Landing Page Creator", "Build high-converting landing pages without coding.", "Integration with major CRM and email platforms."],
      ["Analytics Dashboard", "Unified view of all your marketing metrics.", "Custom reports and automated insights."],
      ["Ad Campaign Manager", "Create and optimize digital ad campaigns.", "ROI calculator predicts campaign performance."],

      // Business Tools
      ["Invoice Generator", "Professional invoices with automatic calculations.", "Multi-currency support and tax calculations."],
      ["Contract Template Library", "Legal document templates for common business needs.", "Electronic signature integration."],
      ["Expense Tracker", "Automated expense categorization and reporting.", "Receipt scanning with OCR technology."],
      ["Team Collaboration Platform", "Unified workspace for projects, chat, and files.", "Real-time collaboration on documents."],
      ["Customer Feedback Tool", "Collect and analyze customer feedback at scale.", "Sentiment analysis identifies key themes."],
      ["HR Management System", "Employee onboarding, time tracking, and performance reviews.", "Compliance monitoring for labor regulations."]
    ];

    // Screen lines
    const line1 = document.querySelector('.screen-text.line1');
    const line2 = document.querySelector('.screen-text.line2');
    const line3 = document.querySelector('.screen-text.line3');

    // Keyboard keys collection
    const keyEls = Array.from(document.querySelectorAll('.key'));
    const cutKey = document.getElementById('cut-key');

    // Audio context for typing sound
    let audioCtx;
    function initAudio() {
      if (!audioCtx) {
        audioCtx = new (window.AudioContext || window.webkitAudioContext)();
      }
    }

    // Play mild typing sound
    function playTypeSound() {
      try {
        initAudio();
        const now = audioCtx.currentTime;
        
        // Create oscillator for click sound
        const osc = audioCtx.createOscillator();
        const gain = audioCtx.createGain();
        
        // Mild click frequency with variation
        osc.type = 'square';
        osc.frequency.setValueAtTime(800 + Math.random() * 200, now);
        
        // Very soft volume envelope
        gain.gain.setValueAtTime(0, now);
        gain.gain.linearRampToValueAtTime(0.015, now + 0.001); // Quick attack
        gain.gain.exponentialRampToValueAtTime(0.001, now + 0.05); // Quick decay
        
        // Connect and play
        osc.connect(gain);
        gain.connect(audioCtx.destination);
        osc.start(now);
        osc.stop(now + 0.05);
      } catch (e) {
        // Silently ignore if audio fails
      }
    }

    // Typing control variables
    let currentIdx = Math.floor(Math.random() * toolSnippets.length);
    let currentText = '';
    let charIndex = 0;
    let currentLine = 1;
    let typingTimer = null;
    let glowTimer = null;
    let isTyping = false;
    let deleteMode = false;

    // Helper: start glow animation (up to 4 keys at once)
    function startGlow() {
      stopGlow(); // Clear any existing
      glowTimer = setInterval(() => {
        // Clear previous glows
        keyEls.forEach(k => k.classList.remove('glow'));
        
        // Choose 1 to 4 random keys to glow
        const numKeys = Math.floor(1 + Math.random() * 4); // 1 to 4 keys
        const picked = new Set();
        
        // Pick random unique keys
        while (picked.size < numKeys) {
          const idx = Math.floor(Math.random() * keyEls.length);
          if (keyEls[idx] !== cutKey) { // Don't glow the cut key during typing
            picked.add(idx);
          }
        }
        
        // Apply glow to selected keys
        picked.forEach(i => {
          keyEls[i].classList.add('glow');
        });
      }, 100); // Update glowing keys every 100ms for dynamic effect
    }

    function stopGlow() {
      if (glowTimer) {
        clearInterval(glowTimer);
        glowTimer = null;
      }
      keyEls.forEach(k => k.classList.remove('glow'));
    }

    // Press/unpress cut key
    function pressCutKey(on) {
      if (!cutKey) return;
      if (on) {
        cutKey.classList.add('pressed');
      } else {
        cutKey.classList.remove('pressed');
      }
    }

    // Medium-fast typing speed (50-80ms per character)
    function randomTypeDelay() {
      return 50 + Math.random() * 30;
    }
    
    // Deletion is slightly faster
    function randomDeleteDelay() {
      return 35 + Math.random() * 20;
    }

    // Main typing function
    function typeNextChar() {
      // Start glowing when typing starts
      if (!isTyping) {
        isTyping = true;
        startGlow();
      }
      
      // Play typing sound for each character
      playTypeSound();

      const [title, desc, fact] = toolSnippets[currentIdx];
      
      if (currentLine === 1) {
        if (charIndex < title.length) {
          currentText += title[charIndex];
          line1.textContent = currentText;
          charIndex++;
          typingTimer = setTimeout(typeNextChar, randomTypeDelay());
          return;
        }
        // Finished line 1
        charIndex = 0;
        currentText = '';
        currentLine = 2;
        typingTimer = setTimeout(typeNextChar, 200 + Math.random() * 100);
      } else if (currentLine === 2) {
        if (charIndex < desc.length) {
          currentText += desc[charIndex];
          line2.textContent = currentText;
          charIndex++;
          typingTimer = setTimeout(typeNextChar, randomTypeDelay());
          return;
        }
        // Finished line 2
        charIndex = 0;
        currentText = '';
        currentLine = 3;
        typingTimer = setTimeout(typeNextChar, 200 + Math.random() * 100);
      } else if (currentLine === 3) {
        if (charIndex < fact.length) {
          currentText += fact[charIndex];
          line3.textContent = currentText;
          charIndex++;
          typingTimer = setTimeout(typeNextChar, randomTypeDelay());
          return;
        }
        // Finished typing all lines - stop glowing
        isTyping = false;
        stopGlow();
        
        // Pause before deletion
        deleteMode = true;
        typingTimer = setTimeout(finishTyping, 1500 + Math.random() * 1000);
      }
    }

    function finishTyping() {
      // Start deletion
      deleteMode = true;
      pressCutKey(true);
      stopGlow(); // Ensure glow is stopped during deletion
      charIndex = 0;
      deleteLine(3);
    }

    function deleteLine(lineNum) {
      const [title, desc, fact] = toolSnippets[currentIdx];
      let targetLine, targetText;
      
      if (lineNum === 3) {
        targetLine = line3;
        targetText = fact;
      } else if (lineNum === 2) {
        targetLine = line2;
        targetText = desc;
      } else {
        targetLine = line1;
        targetText = title;
      }

      const remaining = targetLine.textContent.length;
      if (remaining > 0) {
        pressCutKey(true);
        targetLine.textContent = targetText.substring(0, remaining - 1);
        
        // Optional: play sound during deletion (quieter)
        // playTypeSound();
        
        typingTimer = setTimeout(() => deleteLine(lineNum), randomDeleteDelay());
      } else {
        pressCutKey(false);
        if (lineNum > 1) {
          setTimeout(() => {
            deleteLine(lineNum - 1);
          }, 100 + Math.random() * 100);
        } else {
          // Finished deletion, pick next snippet
          deleteMode = false;
          
          let nextIdx;
          if (toolSnippets.length <= 1) {
            nextIdx = 0;
          } else {
            do {
              nextIdx = Math.floor(Math.random() * toolSnippets.length);
            } while (nextIdx === currentIdx);
          }
          
          currentIdx = nextIdx;
          currentLine = 1;
          charIndex = 0;
          currentText = '';
          isTyping = false;
          
          // Start typing next snippet
          typingTimer = setTimeout(typeNextChar, 500 + Math.random() * 300);
        }
      }
    }

    // Initialize audio on first user interaction
    document.addEventListener('click', initAudio, { once: true });

    // Start initial typing
    setTimeout(typeNextChar, 800);

    // Cleanup on unload
    window.addEventListener('beforeunload', () => {
      if (typingTimer) clearTimeout(typingTimer);
      if (glowTimer) clearInterval(glowTimer);
      if (audioCtx && typeof audioCtx.close === 'function') audioCtx.close();
    });
  </script>
</body>
</html>
